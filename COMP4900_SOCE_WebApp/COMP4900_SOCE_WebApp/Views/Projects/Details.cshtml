@model SensorDataModel.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>

        <table class="table">
            <tr>
                <th>Users</th>
                <th>Sensors</th>
                <th>Custom Groups</th>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Assign Users" class="btn btn-primary btn-large" onclick="location.href='@Url.Action("AssignUsersToProjects"  , "Projects", new { id=Model.ProjectId })'">
                </td>
                <td>
                    <input type="submit" value="Assign Sensors" class="btn btn-primary btn-large" onclick="location.href='@Url.Action("AssignSensorsToProjects"  , "Projects", new { id=Model.ProjectId })'">
                    <input type="submit" value="Remove Sensors" class="btn btn-primary btn-large" onclick="location.href='@Url.Action("RemoveSensorsFromProjects"  , "Projects", new { id=Model.ProjectId })'">
                </td>
                <td>
                    <input type="submit" value="Add" class="btn btn-primary btn-large" onclick="location.href='@Url.Action("Create", "CustomGroups", new { id=Model.ProjectId })'">
                </td>
            </tr>
        </table>

        <dt>
            @ViewBag.AssignedUser
        </dt>
        <dd>
            @ViewBag.AssignedUserValue
        </dd>
        <dt>
            @ViewBag.CustomGroups
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <td>Custom Group Name</td>
                    <td>Sensor Name</td>
                </tr>
                @foreach (var item in ViewBag.CustomGroupValues)
                {
                    <tr>
                        <td>
                            @item.CustomGroupName
                        </td>
                        <td>
                            @item.SensorName
                        </td>
                        <td>
                            <input type="submit" value="Remove" class="btn btn-primary btn-large" onclick="location.href='@Url.Action("Delete", "CustomGroups", new { id=item.CustomGroupId})'">
                        </td>
                    </tr>
                }
            </table>
        <dt>
            @ViewBag.AssignedSensors
        </dt>
        <dd>
            @foreach (var i in ViewBag.SensorList)
            {
                @i<br />
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProjectId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
